<% else  %>


















<div class="container mt-5">

    <%= simple_form_for @publication, html: {class: 'form-inline text-area-container'} do |f| %>
      <%= f.input :content, label: false, placeholder: "Un problème avec votre voisin ?", input_html: { class: "post-input" }, wrapper_html: { class: "text-area-wrapper"} %>
      <%= f.submit "Publier", class: "btn btn-flat text-area-button" %>
    <% end %>

  <h2 class="my-4">Les posts à la une</h2>
  <div class="cards">
      <% @publications.reverse.first(3).each do |publication| %>
        <%= link_to publication_path(publication) do %>
          <div class="card-home">
            <div class="user-data">
              <%= cl_image_tag current_user.profile_picture, class: "avatar-large" %>
              <div class="username"><%= publication.user.username %>
              </div>
            </div>
            <div class="description">
            <%= publication.content.truncate(100, separator: ' ') %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <%= link_to publications_path do %>
      <p class="text-right">Découvrir plus de posts <i class="far fa-arrow-alt-circle-right"></i> </p>


<% if current_user == nil %>
<div class="container">
  <div class="d-flex justify-content-left align-items-center">
    <%= image_tag "logo.png", alt: "alttext", width:200%>
    <h1> #BalanceTonVoisin </h1>
  </div>
  <div>
    <div>
      <%= image_tag "graphique.png", alt: "alttext", width: 400%>
      <p> Attention ce graphique ne donne aucune information </p>
    </div>
    <div>
      <%= render "devise/shared/login" %>
      <%= link_to "Sign up", new_user_registration_path  %>
    </div>
  </div>

  <div>
    <h2> Balance ton Voisin c'est:</h2>

    <li> 350 voisins incarcérés </li>
    <li> 150 pangolins sauvés </li>
    <li> 30 000 chocolatines </li>
    <li> 250 virus réduits à neant </li>
    <li> 1 arbre planté </li>
    <li> 1 Vichy renouvellé </li>
  </div>
</div>



<% else  %>

















<div class="container mt-5">
  <h2 class="mb-4">Les posts à la une</h2>

<div class="cards">
    <% @publications.reverse.each do |publication| %>
      <%= link_to publication_path(publication) do %>
        <div class="card-post">
          <div class="user-data">
            <img class="avatar-large" alt="avatar-large" src="https://kitt.lewagon.com/placeholder/users/arthur-littm"> 
            <div class="username"><%= publication.user.username %>
            </div>
          </div>
          <div class="description">
          <%= publication.content.truncate(100, separator: ' ') %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
























<% end  %>


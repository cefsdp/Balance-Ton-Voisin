
<div class="container form-login">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <h3 class="p-2">Connexion</h3>
      <%= simple_form_for(@resource, as: @resource_name, url: session_path(@resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      label: "Mot de passe",
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if @devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Connexion", class:"btn btn-submit" %>
          <%= link_to "CrÃ©er un compte", new_user_registration_path, class:"btn btn-signup text-decoration-none" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container col-4 offset-4 my-5">

<h2>Me connecter</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs" style="width: 100%">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                label: "Mot de passe",
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions btn btn-flat mb-4">
    <%= f.button :submit, "Me connecter" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>

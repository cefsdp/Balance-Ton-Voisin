<h2><%= @publication.title %></h2>
<p><%= @publication.content %></p>
<p><%= @publication.user.email %></p>
<% if policy(@publication).edit? %>
  <%= link_to edit_publication_path(@publication) do %>
    <i class="fas fa-edit"></i>
  <% end %>
	<% end %>
	<% if policy(@publication).destroy? %>
  <%= link_to publication_path(@publication), method: :delete do %>
    <i class="far fa-trash-alt"></i>
  <% end %>
<% end %>

<% @comments.each do |comment| %>
	<p><%= comment.user.email %>, <%= comment.created_at %> </p>
	<p><%= comment.content %></p>
<% end %>


<%= simple_form_for [ @publication, @comment ] do |f| %>
  <%= f.input :content, label: "Ajouter un commentaire" %>
  <%= f.submit %>
<% end %>

<div class="container my-5">
	<h1 class="mb-4">Les derniers posts</h1>

	<% @publications.reverse.each do |publication| %>
		<%= link_to publication_path(publication) do %>
			<div class="card-post">
				<div class="user-data">
					<img class="avatar-large" alt="avatar-large" src="https://kitt.lewagon.com/placeholder/users/arthur-littm"> 
					<div class="username"><%= publication.user.username %>
					</div>
				</div>
				<div class="description">
				<%= publication.content.truncate(300, separator: ' ') %>
				</div>
			</div>
		<% end %>
	<% end %>
</div>

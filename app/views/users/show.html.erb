
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
  <div class="d-flex text-left align-items-center">
    <%= image_tag "logo.png", alt: "alttext"%>
    <h3 class="pt-2 title-website"> #Balancetonvoisin</h3>
  </div>
  <% end %>
 </div>

<div class="user-profile-navbar">
<div class="user-profile-picture text-center">
		<%= cl_image_tag @user.profile_picture, class: "avatar-xl" %>
	    <h1 class="pt-2"><%= @user.username %></h1>
    </div>
</div>



<div class="profile-content">
<div class="col-4 pl-5 user-infos">
	<h2 class="mb-4">Infos</h2>
	<div class="card-post">
		<p> <%= @publications.count %> publications</p>
		<p> <%= @comments.count %> participations </p>
		<p class="mb-0">0 clashes gagn√©s</p>
	</div>
</div>
	<div class="col-8 pr-5 py-2 user-publications">
		<% @publications.reverse.each do |publication| %>
			<%= link_to publication_path(publication) do %>
				<div class="card-post">
					<div class="posthead">
						<div class="user-data">
							<div><%= cl_image_tag publication.user.profile_picture, class: "avatar-large" %></div> 
							<div class="username"><%= publication.user.username %></div>
						</div>
					</div>
					<div class="description">
						<%= publication.content.truncate(300, separator: ' ') %>
					</div>
				</div>
			<% end %>
		<% end %>
	</div>

</div>
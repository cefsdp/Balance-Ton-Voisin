<%=  render "shared/navbar_profile" %>

<div class="d-flex flex-column justify-content-center align-items-center profile-description">
    <h3 class="pt-2">Bonjour <%= @user.username %>!
    <% if @user == current_user %>
    	<%= link_to edit_user_registration_path(@user) do  %>
    	  <i class="far fa-edit edit"></i>
    	 <% end %>
    <% end %>
    </h3>
    <p class="text-secondary">Profil type: <%= @user.description %></p>
</div>




<div class="profile-content">
  <div class="col-4 pl-5 py-2 user-infos">
  	<div class="card-post">
  		<p> <%= @publications.count %> publications</p>
  		<p> <%= @comments.count %> participations </p>
  		<p class="mb-0">0 clashes gagn√©s</p>
  	</div>
  </div>
	<div class="col-8 pr-5 py-2 user-publications">
		<% @publications.reverse.each do |publication| %>
			<%= link_to publication_path(publication) do %>
				<div class="card-post">
					<div class="posthead">
						<div class="user-data">
							<div><%= cl_image_tag publication.user.profile_picture, class: "avatar-large" %></div>
							<div class="username"><%= publication.user.username %></div>
						</div>
			<div class="text-secondary pt-3"><%= publication.created_at %></div>
					</div>
					<div class="description">
						<%= publication.content.truncate(300, separator: ' ') %>
					</div>
				</div>
			<% end %>
		<% end %>
	</div>

</div>
